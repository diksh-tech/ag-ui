# validate_core_types.py
import asyncio
import httpx
from ag_ui.core import RunAgentInput, UserMessage, Tool, Context

async def validate_core_types_usage():
    """Validate that we're using AG-UI core types correctly"""
    
    print("ğŸ” Validating AG-UI Core Types Usage")
    print("=" * 50)
    
    # Test creating proper RunAgentInput
    print("\n1. Testing RunAgentInput creation...")
    try:
        test_input = RunAgentInput(
            thread_id="validation-thread",
            run_id="validation-run-001",
            state={"test": "data"},
            messages=[
                UserMessage(
                    id="val-msg-1",
                    role="user", 
                    content="Test message for validation",
                    name="validator"
                )
            ],
            tools=[
                Tool(
                    name="test_tool",
                    description="A test tool for validation",
                    parameters={
                        "type": "object",
                        "properties": {
                            "param1": {"type": "string"}
                        }
                    }
                )
            ],
            context=[
                Context(
                    description="Validation context",
                    value="This is a test context"
                )
            ],
            forwarded_props={"validation": True}
        )
        
        # Convert to dict to verify serialization
        input_dict = test_input.model_dump()
        print("âœ… RunAgentInput created successfully")
        print(f"   Thread ID: {input_dict['thread_id']}")
        print(f"   Messages: {len(input_dict['messages'])}")
        print(f"   Tools: {len(input_dict['tools'])}")
        
    except Exception as e:
        print(f"âŒ RunAgentInput validation failed: {e}")
        return False
    
    # Test server health
    print("\n2. Testing server health...")
    try:
        async with httpx.AsyncClient() as client:
            response = await client.get("http://localhost:8001/")
            if response.status_code == 200:
                health_data = response.json()
                print(f"âœ… Server healthy: {health_data}")
            else:
                print(f"âŒ Server health check failed: {response.status_code}")
    except Exception as e:
        print(f"âŒ Server not reachable: {e}")
        return False
    
    # Test tools endpoint
    print("\n3. Testing tools format...")
    try:
        async with httpx.AsyncClient() as client:
            response = await client.get("http://localhost:8001/tools")
            if response.status_code == 200:
                tools_data = response.json()
                tool_count = len(tools_data.get('tools', []))
                print(f"âœ… Tools available: {tool_count}")
                
                # Validate tool structure
                if tool_count > 0:
                    first_tool = tools_data['tools'][0]
                    required_fields = ['name', 'description', 'parameters']
                    if all(field in first_tool for field in required_fields):
                        print("âœ… Tool structure is valid")
                    else:
                        print("âŒ Tool structure is invalid")
                        return False
            else:
                print(f"âŒ Tools endpoint failed: {response.status_code}")
    except Exception as e:
        print(f"âŒ Tools validation failed: {e}")
        return False
    
    print("\n" + "=" * 50)
    print("ğŸ¯ Core Types Validation Complete!")
    print("All AG-UI core types are being used correctly.")
    print("\nNext steps:")
    print("1. Run 'python ag_ui_proper_server.py'")
    print("2. Run 'python ag_ui_proper_client.py'")
    print("3. Your MCP tools will be available as AG-UI tools!")
    
    return True

if __name__ == "__main__":
    asyncio.run(validate_core_types_usage())
