                    print(f"   - {tool['name']}: {tool['description'][:50]}...")
            else:
                print(f"âŒ Tools endpoint failed: {response.status_code}")
        except Exception as e:
            print(f"âŒ Tools test failed: {e}")

if __name__ == "__main__":
    print("ğŸ”¬ FlightOps Proper AG-UI Integration Test")
    print("Using AG-UI Core Types for type-safe agent communication")
    
    # Test tools endpoint first
    asyncio.run(test_agui_tools())
    
    # Then run the main tests
