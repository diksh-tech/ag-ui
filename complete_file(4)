# ag_ui_proper_client.py
import asyncio
import httpx
import json
from datetime import datetime
from typing import List, Dict, Any

# AG-UI Core Types for client-side validation
from ag_ui.core import RunAgentInput, UserMessage, Tool, Context

async def create_proper_agui_request(user_query: str) -> Dict[str, Any]:
    """Create a properly formatted AG-UI request"""
    
    # Define available tools (matching your MCP tools)
    tools = [
        Tool(
            name="get_flight_basic_info",
            description="Fetch basic flight information including carrier, flight number, stations, scheduled times, and flight status.",
            parameters={
                "type": "object",
                "properties": {
                    "carrier": {"type": "string"},
                    "flight_number": {"type": "string"}, 
                    "date_of_origin": {"type": "string"}
                },
                "required": []
            }
        ).model_dump(),
        Tool(
            name="get_equipment_info",
            description="Get aircraft equipment details: aircraft type, tail number (registration), and configuration.",
            parameters={
                "type": "object", 
                "properties": {
                    "carrier": {"type": "string"},
                    "flight_number": {"type": "string"},
                    "date_of_origin": {"type": "string"}
                },
                "required": []
            }
        ).model_dump()
    ]
    
    # Create the input using proper types
    input_data = RunAgentInput(
        thread_id="flight-ops-thread",
        run_id=f"run-{int(datetime.now().timestamp())}",
        state={"session_type": "flight_query"},
        messages=[
            UserMessage(
                id=f"msg-{int(datetime.now().timestamp())}",
                role="user",
                content=user_query,
                name="flight-user"
            )
        ],
        tools=tools,
        context=[
            Context(
                description="Flight operations database",
                value="Access to real-time flight data including status, equipment, delays, and passenger information"
            ).model_dump()
        ],
        forwarded_props={"source": "ag_ui_client"}
    )
    
    return input_data.model_dump()

async def call_proper_agui_agent():
    """Test the proper AG-UI server with flight data queries"""
    
    test_queries = [
        "What's the status of flight 6E 215 on 2024-06-23?",
        "Get equipment information for flight 6E 215",
        "Show me the delay summary for flight 6E 215",
        "What's the passenger count on flight 6E 215?",
        "Get fuel summary for flight 6E 215 on 2024-06-23"
    ]
    
    for i, user_query in enumerate(test_queries):
        print(f"\n{'='*60}")
        print(f"ğŸš€ PROPER AG-UI TEST {i+1}: {user_query}")
        print(f"{'='*60}")
        
        # Create proper AG-UI request
        input_data = await create_proper_agui_request(user_query)
        
        print("ğŸ”„ Creating proper AG-UI request...")
        print(f"   Thread ID: {input_data['thread_id']}")
        print(f"   Run ID: {input_data['run_id']}")
        print(f"   Tools: {len(input_data['tools'])}")
        
        url = "http://localhost:8001/agent"
        
        async with httpx.AsyncClient(timeout=60.0) as client:
            try:
                async with client.stream(
                    "POST",
                    url,
                    json=input_data,
                    headers={
                        "Accept": "text/event-stream",
                        "Content-Type": "application/json"
                    }
                ) as response:
                    print(f"âœ… Connected. Status: {response.status_code}")
                    
                    if response.status_code != 200:
                        error_body = await response.aread()
                        print(f"âŒ Server error: {error_body}")
                        continue
                    
                    print("ğŸ¯ Receiving AG-UI events...")
                    
                    async for line in response.aiter_lines():
                        line = line.strip()
                        if line.startswith("data: "):
                            event_json = line[6:]
                            if event_json:
                                try:
                                    event = json.loads(event_json)
                                    event_type = event.get('type')
                                    
                                    # Handle different event types
                                    if event_type == EventType.RUN_STARTED:
                                        print(f"ğŸš€ Run started: {event.get('run_id')}")
                                    elif event_type == EventType.TEXT_MESSAGE_START:
                                        print(f"ğŸ’¬ Assistant: ", end='', flush=True)
                                    elif event_type == EventType.TEXT_MESSAGE_CONTENT:
                                        print(event.get('delta', ''), end='', flush=True)
                                    elif event_type == EventType.TEXT_MESSAGE_END:
                                        print()  # New line
                                    elif event_type == EventType.RUN_FINISHED:
                                        print(f"âœ… Run completed successfully!")
                                    elif event_type == EventType.RUN_ERROR:
                                        print(f"âŒ Run error: {event.get('message')}")
                                    elif event_type == EventType.TOOL_CALL_START:
                                        print(f"ğŸ”§ Tool call: {event.get('tool_call_name')}")
                                    
                                except json.JSONDecodeError as e:
                                    print(f"âš ï¸ Could not parse event: {e}")
                    
            except Exception as e:
                print(f"âŒ Error: {e}")
        
        await asyncio.sleep(1)  # Brief pause between queries

async def test_agui_tools():
    """Test the tools endpoint"""
    print("\nğŸ”§ Testing AG-UI Tools Endpoint...")
    
    async with httpx.AsyncClient() as client:
        try:
            response = await client.get("http://localhost:8001/tools")
            if response.status_code == 200:
                tools_data = response.json()
                print(f"âœ… Available tools: {len(tools_data.get('tools', []))}")
