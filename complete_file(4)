# ag_ui_proper_server.py
import os
import uuid
import json
import asyncio
from typing import List, Any, Optional, AsyncGenerator
from fastapi import FastAPI, Request, HTTPException
from fastapi.responses import StreamingResponse
from fastapi.middleware.cors import CORSMiddleware
from dotenv import load_dotenv

# Import AG-UI Core Types
from ag_ui.core import (
    RunAgentInput, Message, UserMessage, AssistantMessage, ToolMessage,
    SystemMessage, Tool, ToolCall, FunctionCall, Context, State,
    RunStartedEvent, RunFinishedEvent, RunErrorEvent,
    TextMessageStartEvent, TextMessageContentEvent, TextMessageEndEvent,
    ToolCallStartEvent, ToolCallArgsEvent, ToolCallEndEvent, ToolCallResultEvent,
    EventType
)

# Import your MCP client
from mcp_client import FlightOpsMCPClient
from tool_registry import TOOLS

load_dotenv()

app = FastAPI(title="FlightOps AG-UI Proper Server")

# Add CORS middleware
app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_methods=["*"],
    allow_headers=["*"],
)

class FlightOpsAGUIAgent:
    def __init__(self):
        self.mcp_client = FlightOpsMCPClient()
        self._connected = False

    async def connect(self):
        if not self._connected:
            await self.mcp_client.connect()
            self._connected = True

    def _convert_tools_to_agui_format(self) -> List[Tool]:
        """Convert MCP tools to AG-UI Tool format"""
        agui_tools = []
        
        for tool_name, tool_meta in TOOLS.items():
            # Create JSON schema for parameters
            properties = {}
            required = []
            
            for arg in tool_meta["args"]:
                properties[arg] = {"type": "string"}
                required.append(arg)
            
            parameters = {
                "type": "object",
                "properties": properties,
                "required": required
            }
            
            agui_tool = Tool(
                name=tool_name,
                description=tool_meta["desc"],
                parameters=parameters
            )
            agui_tools.append(agui_tool)
        
        return agui_tools

    async def process_agent_input(self, input_data: RunAgentInput) -> AsyncGenerator[str, None]:
        """Process AG-UI input and yield proper events"""
        try:
            # Emit RUN_STARTED event
            yield RunStartedEvent(
                type=EventType.RUN_STARTED,
                thread_id=input_data.thread_id,
                run_id=input_data.run_id
            ).model_dump_json()

            # Connect to MCP client
            await self.connect()

            # Get the latest user message
            user_message = None
            for msg in reversed(input_data.messages):
                if isinstance(msg, UserMessage):
                    user_message = msg.content
                    break

            if not user_message:
                raise ValueError("No user message found")

            # Emit TEXT_MESSAGE_START
            message_id = f"msg-{uuid.uuid4().hex[:8]}"
            yield TextMessageStartEvent(
                type=EventType.TEXT_MESSAGE_START,
                message_id=message_id,
                role="assistant"
            ).model_dump_json()

            # Convert tools to AG-UI format
            available_tools = self._convert_tools_to_agui_format()
            
            # Use MCP client to process the query
            mcp_result = await self.mcp_client.run_query(user_message)
            
            # Extract response text
            if "summary" in mcp_result:
                response_text = mcp_result["summary"]
            elif "error" in mcp_result:
                response_text = f"Error: {mcp_result['error']}"
            else:
                response_text = "I've processed your flight data query."

            # Stream text content
            words = response_text.split()
            for word in words:
                yield TextMessageContentEvent(
                    type=EventType.TEXT_MESSAGE_CONTENT,
                    message_id=message_id,
                    delta=word + " "
                ).model_dump_json()
                await asyncio.sleep(0.03)

            # Emit TEXT_MESSAGE_END
            yield TextMessageEndEvent(
                type=EventType.TEXT_MESSAGE_END,
                message_id=message_id
            ).model_dump_json()

            # Emit RUN_FINISHED
            yield RunFinishedEvent(
                type=EventType.RUN_FINISHED,
                thread_id=input_data.thread_id,
                run_id=input_data.run_id
            ).model_dump_json()

        except Exception as error:
            yield RunErrorEvent(
                type=EventType.RUN_ERROR,
                message=str(error)
            ).model_dump_json()

# Global agent instance
agent = FlightOpsAGUIAgent()

@app.post("/agent")
async def flight_agent_endpoint(request: Request):
    """Proper AG-UI endpoint using core types"""
    try:
        # Parse request body as RunAgentInput
        body = await request.json()
        input_data = RunAgentInput(**body)
        
        print(f"ğŸ“¥ Received AG-UI request:")
        print(f"   Thread: {input_data.thread_id}")
        print(f"   Run: {input_data.run_id}")
        print(f"   Messages: {len(input_data.messages)}")
        print(f"   Tools: {len(input_data.tools)}")

        async def event_generator() -> AsyncGenerator[str, None]:
            async for event_json in agent.process_agent_input(input_data):
                yield f"data: {event_json}\n\n"

        return StreamingResponse(
            event_generator(),
            media_type="text/event-stream",
            headers={
                "Cache-Control": "no-cache",
                "Connection": "keep-alive",
                "Access-Control-Allow-Origin": "*",
            }
        )

    except Exception as e:
        print(f"âŒ Server error: {e}")
        raise HTTPException(status_code=500, detail=str(e))

@app.get("/")
async def health_check():
    return {
        "status": "healthy", 
        "service": "FlightOps AG-UI Proper Server",
        "ag_ui_version": "using core types"
    }

@app.get("/tools")
async def list_agui_tools():
    """List tools in AG-UI format"""
    tools = agent._convert_tools_to_agui_format()
    return {
        "tools": [tool.model_dump() for tool in tools]
    }

