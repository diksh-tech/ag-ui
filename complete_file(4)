# ag_ui_server.py
import os
import uuid
import json
import asyncio
from typing import AsyncGenerator, Dict, Any
from fastapi import FastAPI, Request, HTTPException
from fastapi.responses import StreamingResponse
from fastapi.middleware.cors import CORSMiddleware
from openai import AzureOpenAI
from dotenv import load_dotenv

load_dotenv()

app = FastAPI(title="FlightOps AG-UI Server")

# Add CORS middleware
app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_methods=["*"],
    allow_headers=["*"],
)

# Azure OpenAI client
try:
    client = AzureOpenAI(
        api_key=os.getenv("AZURE_OPENAI_KEY"),
        api_version=os.getenv("AZURE_API_VERSION", "2024-12-01-preview"),
        azure_endpoint=os.getenv("AZURE_OPENAI_ENDPOINT")
    )
    OPENAI_AVAILABLE = True
except Exception as e:
    print(f"‚ö†Ô∏è Azure OpenAI not configured: {e}")
    OPENAI_AVAILABLE = False
    client = None

@app.post("/agent")
async def flight_agent_endpoint(request: Request):
    """AG-UI compatible flight operations agent"""
    
    try:
        # Parse the request body
        body = await request.json()
        print(f"üì• Received request with {len(body.get('messages', []))} messages")
        
        # Extract messages from the request
        messages = body.get("messages", [])
        thread_id = body.get("thread_id", "default-thread")
        run_id = body.get("run_id", f"run-{uuid.uuid4().hex[:8]}")
        
        if not messages:
            raise HTTPException(status_code=400, detail="No messages provided")
            
        # Get the latest user message
        user_message = None
        for msg in reversed(messages):
            if msg.get("role") == "user":
                user_message = msg.get("content", "")
                break
        
        if not user_message:
            raise HTTPException(status_code=400, detail="No user message found")

        async def event_generator() -> AsyncGenerator[str, None]:
            try:
                # Emit RUN_STARTED
                yield f"data: {json.dumps({'type': 'RUN_STARTED', 'thread_id': thread_id, 'run_id': run_id})}\n\n"
                
                # Emit TEXT_MESSAGE_START
                message_id = f"msg-{uuid.uuid4().hex[:8]}"
                yield f"data: {json.dumps({'type': 'TEXT_MESSAGE_START', 'message_id': message_id, 'role': 'assistant'})}\n\n"

                if not OPENAI_AVAILABLE or not client:
                    # Fallback response if OpenAI isn't configured
                    response_text = "I'm your FlightOps assistant. Currently, Azure OpenAI is not configured. Please check your environment variables."
                else:
                    # Call Azure OpenAI
                    completion = client.chat.completions.create(
                        model=os.getenv("AZURE_OPENAI_DEPLOYMENT", "gpt-4o"),
                        messages=[
                            {"role": "system", "content": "You are a helpful flight operations assistant for an airline. Provide concise, helpful responses about flight status, equipment, delays, and other flight operations information."},
                            {"role": "user", "content": user_message}
                        ],
                        max_tokens=500
                    )
                    response_text = completion.choices[0].message.content
                
                # Stream response in chunks
                words = response_text.split()
                for word in words:
                    event_data = {
                        'type': 'TEXT_MESSAGE_CONTENT', 
                        'message_id': message_id, 
                        'delta': word + ' '
                    }
                    yield f"data: {json.dumps(event_data)}\n\n"
                    await asyncio.sleep(0.05)  # Small delay for streaming effect

                # Emit TEXT_MESSAGE_END
                yield f"data: {json.dumps({'type': 'TEXT_MESSAGE_END', 'message_id': message_id})}\n\n"
                
                # Emit RUN_FINISHED
                yield f"data: {json.dumps({'type': 'RUN_FINISHED', 'thread_id': thread_id, 'run_id': run_id})}\n\n"

            except Exception as error:
                print(f"‚ùå Error in event generator: {error}")
                yield f"data: {json.dumps({'type': 'RUN_ERROR', 'message': str(error)})}\n\n"

        return StreamingResponse(
            event_generator(),
            media_type="text/event-stream",
            headers={
                "Cache-Control": "no-cache",
                "Connection": "keep-alive",
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "*",
            }
        )

    except Exception as e:
        print(f"‚ùå Server error: {e}")
        raise HTTPException(status_code=500, detail=str(e))

@app.get("/")
async def health_check():
    return {
        "status": "healthy", 
        "service": "FlightOps AG-UI Server",
        "openai_configured": OPENAI_AVAILABLE
    }

@app.get("/test")
async def test_endpoint():
    return {"message": "Server is working!"}

# Use this for direct execution without reload
if __name__ == "__main__":
    import uvicorn
    uvicorn.run(app, host="0.0.0.0", port=8001)
